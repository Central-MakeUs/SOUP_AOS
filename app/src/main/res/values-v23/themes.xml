<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Remove the title bar -->
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_orange</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.App.TimePicker</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="rippleColor">@color/chip_ripple_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="CustomKeywordChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/main_orange</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="CustomStoreKeywordChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/main_orange</item>
        <item name="rippleColor">@color/chip_ripple_color</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="CustomKeywordChipStyle3" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/main_orange</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>


    <style name="CustomGroupKeywordChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/main_color</item>
        <item name="chipStrokeColor">@color/white</item>
        <item name="chipStrokeWidth">1.5dp</item>
    </style>

    <style name="CustomGroupKeywordChipStyle1" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeColor">@color/white</item>
        <item name="chipStrokeWidth">1.5dp</item>
    </style>

    <style name="CustomKeywordChipStyle2" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/chip_stroke_color2</item>
        <item name="rippleColor">@color/chip_ripple_color</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>


    <style name="CustomCharacterStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="rippleColor">@color/main_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerSizeTopLeft">75dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/main_orange</item>
    </style>

    <style name="ThemeOverlay.App.TimePicker" parent="@style/ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/main_orange</item>
    </style>

<!--    <style name="SpinnerTheme" parent="android:Widget.Spinner">-->
<!--        <item name="android:background">@drawable/ic_vector_5</item>-->
<!--    </style>-->


</resources>