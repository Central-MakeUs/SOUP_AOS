<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingEnd="12dp"
    android:layout_marginBottom="23dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="#33000000"
        android:outlineAmbientShadowColor="#33000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/food_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_3_radius"
            android:src="@drawable/ic_food_example"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_background"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="20sp"
            android:padding="1.5dp"
            android:text="@string/create_group_name"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/food_img"
            app:layout_constraintStart_toStartOf="@+id/food_img"
            app:layout_constraintTop_toTopOf="@+id/food_img"
            tools:ignore="SmallSp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="@string/mate_suggestion_title"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/food_img"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/restaurant_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="5sp"
            android:text="@string/mate_suggestion_restaurant"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/title_txt"
            app:layout_constraintTop_toBottomOf="@+id/title_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="5sp"
            android:text="@string/mate_suggestion_time"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/restaurant_txt"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="7sp"
            android:text="@string/mate_suggestion_date"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/time_txt"
            app:layout_constraintTop_toBottomOf="@+id/time_txt"
            tools:ignore="SmallSp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/limit_people_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:fontFamily="sans-serif"
            android:text="@string/mate_suggestion_limit_people"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/date_txt"
            app:layout_constraintStart_toEndOf="@+id/date_txt"
            app:layout_constraintTop_toTopOf="@+id/date_txt"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SmallSp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_hello"
            app:layout_constraintBottom_toBottomOf="@+id/limit_people_txt"
            app:layout_constraintStart_toEndOf="@+id/limit_people_txt"
            app:layout_constraintTop_toTopOf="@+id/limit_people_txt" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>