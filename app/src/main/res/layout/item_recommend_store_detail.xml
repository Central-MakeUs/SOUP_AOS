<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cl_store_rec"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="45dp"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="158dp"
            android:layout_height="228dp">


            <ImageView
                android:id="@+id/iv_store"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/toggle_store_like"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_store"
                app:layout_constraintEnd_toEndOf="parent"
                android:textOn="@string/nothing"
                android:textOff="@string/nothing"
                android:button="@color/transparent"
                android:background="@drawable/selector_like_white"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_store_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/group_main_store_name"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:maxLines="1"
                android:maxLength="9"
                android:ellipsize="end"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_store"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_store_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="@string/group_main_store_location"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_store_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SmallSp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_star"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/star_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_store_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_store_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/roboto_regular"
                tools:text="@string/group_main_store_score"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_star"
                app:layout_constraintStart_toEndOf="@+id/iv_star"
                app:layout_constraintTop_toTopOf="@id/iv_star"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>