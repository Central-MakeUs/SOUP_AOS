<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="7dp">




<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="3dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="296dp"
        android:layout_height="79dp">

        <ImageView
            android:id="@+id/iv_menu_img"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_keyword"
            style="@style/CustomKeywordChipStyle"
            android:layout_height="33dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/main_orange"
            tools:text="키워드"
            android:fontFamily="@font/roboto_medium"
            android:textSize="10sp"
            app:closeIconEnabled="false"
            app:layout_constraintStart_toEndOf="@id/iv_menu_img"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_review_rating"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            app:layout_constraintStart_toEndOf="@id/chip_keyword"
            app:layout_constraintTop_toTopOf="@id/chip_keyword"
            app:layout_constraintBottom_toBottomOf="@id/chip_keyword"
            android:layout_marginStart="7dp"
            />

        <TextView
            android:id="@+id/tv_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            tools:text="2010.07.25"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/tv_review_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/iv_menu_img"
            app:layout_constraintTop_toBottomOf="@id/chip_keyword"
            app:layout_constraintEnd_toStartOf="@id/tv_review_date"
            app:layout_constraintBottom_toBottomOf="@id/tv_review_date"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            tools:text="맛이 좋아요"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:fontFamily="@font/roboto_medium"/>








    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>