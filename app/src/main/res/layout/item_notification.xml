<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/tv_noti_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="26dp"
                tools:text="MATE 확정"
                android:textColor="@color/main_orange"
                android:fontFamily="@font/roboto_bold"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_noti_name"
                android:layout_marginTop="15dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/icon_new"
                />

            <TextView
                android:id="@+id/tv_noti_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                tools:text="2021.06.02"
                android:textColor="@color/input_background"/>

            <!--mate notification-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_mate_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/tv_noti_name"
                app:layout_constraintStart_toStartOf="@id/tv_noti_name"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_mate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="14sp"
                    tools:text="갈비탕 드실분!"/>

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:background="@color/black"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_mate_name"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_mate_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/view1"
                    app:layout_constraintTop_toTopOf="@id/view1"
                    app:layout_constraintBottom_toBottomOf="@id/view1"
                    android:layout_marginStart="3dp"
                    tools:text="할머니갈비탕"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:background="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_mate_name"
                    app:layout_constraintStart_toEndOf="@id/tv_mate_store_name"/>

                <TextView
                    android:id="@+id/tv_mate_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/view2"
                    app:layout_constraintTop_toTopOf="@id/view2"
                    app:layout_constraintBottom_toBottomOf="@id/view2"
                    android:layout_marginStart="3dp"
                    tools:text="12:30 - 1:00"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:id="@+id/ll_mate_member_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_mate_store_name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="19dp">




                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>





            <!--not mate notification-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_non_mate_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/tv_noti_name"
                app:layout_constraintStart_toStartOf="@id/tv_noti_name"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_noti1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="후기 작성을 통해 가게 등록과"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_noti2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_noti1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="2dp"
                    tools:text="추천맛집 선정이 가능합니다!"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_noti_exp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_noti2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    tools:text="후기 작성을 통해 우리 그룹 주변"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_noti_exp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_noti_exp1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    tools:text="맛집지도를 만들어보세요:)"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_non_mate_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cl_non_mate_noti"
                app:layout_constraintTop_toTopOf="@id/cl_non_mate_noti"/>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>