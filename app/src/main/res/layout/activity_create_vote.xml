<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.home.group.vote.create_vote.CreateVoteActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.eatoo.custom_view.CustomToolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="19dp"
            app:contentInsetStart="0dp"
            app:leftIcon="@drawable/ic_back_btn"
            app:titleText="@string/create_vote" />

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_create_vote_suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/create_vote_suggest"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_vote_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/vote_name"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_create_vote_suggest"
                app:layout_constraintTop_toBottomOf="@id/tv_create_vote_suggest" />

            <EditText
                android:id="@+id/et_vote_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/edittext_background_radius_litle"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/input_vote_name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingStart="9dp"
                android:paddingTop="13dp"
                android:paddingBottom="14dp"
                android:textColor="@color/black"
                android:textColorHint="@color/input_hint"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_create_vote_suggest"
                app:layout_constraintTop_toBottomOf="@id/tv_vote_name"
                tools:ignore="Autofill,RtlSymmetry" />


            <TextView
                android:id="@+id/tv_vote_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/create_group_keyword"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_create_vote_suggest"
                app:layout_constraintTop_toBottomOf="@id/et_vote_name" />


            <FrameLayout
                android:id="@+id/fl_create_vote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_vote_keyword"
                app:layout_constraintTop_toBottomOf="@id/tv_vote_keyword">


                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexbox_vote_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:alignContent="stretch"
                    app:alignItems="stretch"
                    app:flexWrap="wrap">

                    <EditText
                        android:id="@+id/et_vote_keyword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="top"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:nextFocusDown="@id/et_vote_keyword"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </com.google.android.flexbox.FlexboxLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_vote_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group_gray_plus"
                    app:layout_constraintStart_toStartOf="@id/fl_create_vote"
                    app:layout_constraintTop_toTopOf="@id/fl_create_vote" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_vote_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/vote_item"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_create_vote_suggest"
                app:layout_constraintTop_toBottomOf="@id/fl_create_vote" />

            <LinearLayout
                android:id="@+id/ll_vote_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_create_vote_suggest"
                app:layout_constraintTop_toBottomOf="@id/tv_vote_item">

                <EditText
                    android:id="@+id/et_vote_item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background_radius_litle"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/input_vote_item"
                    android:imeOptions="actionNext"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:inputType="text"
                    android:maxLength="23"
                    android:maxLines="1"
                    android:paddingStart="9dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp"
                    tools:ignore="Autofill,RtlSymmetry" />

                <EditText
                    android:id="@+id/et_vote_item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edittext_background_radius_litle"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/input_vote_item"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="23"
                    android:maxLines="1"
                    android:paddingStart="9dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp"
                    tools:ignore="Autofill,RtlSymmetry" />

                <LinearLayout
                    android:id="@+id/ll_dynamic_vote_item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_vote_item_plus"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edittext_background_radius_litle"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_invalid_name" />

                </LinearLayout>

            </LinearLayout>

            <!--기타-->

            <TextView
                android:id="@+id/tv_vote_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/vote_etc"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_create_vote_suggest"
                app:layout_constraintTop_toBottomOf="@id/ll_vote_item" />


            <View
                android:id="@+id/view_due_date"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="23dp"
                android:background="@color/next_btn"
                app:layout_constraintBottom_toTopOf="@id/custom_toggle_vote_item" />

            <com.example.eatoo.custom_view.CustomToggleLayout
                android:id="@+id/custom_toggle_vote_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_vote_due_date"
                app:titleTextCustomToggle="@string/adding_vote_item_available" />

            <com.example.eatoo.custom_view.CustomToggleLayout
                android:id="@+id/custom_toggle_multi_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/custom_toggle_vote_item"
                app:titleTextCustomToggle="@string/multiple_vote_available" />

            <com.example.eatoo.custom_view.CustomToggleLayout
                android:id="@+id/custom_toggle_anonymous_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/custom_toggle_multi_vote"
                app:titleTextCustomToggle="@string/anonymous_vote" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_register_vote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="27dp"
                android:background="@drawable/login_btn_background"
                android:fontFamily="@font/roboto_regular"
                android:stateListAnimator="@null"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_create_vote_suggest"
                app:layout_constraintTop_toBottomOf="@id/custom_toggle_anonymous_vote" />

            <!--due date-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_vote_due_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_vote_etc">


                <RelativeLayout
                    android:id="@+id/rl_vote_due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="18dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_due_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="9dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/vote_due_date"
                        android:textColor="@color/input_hint"
                        android:textSize="13sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/toggle_due_date"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="11dp"
                        android:background="@drawable/selector_create_vote_toggle"
                        android:button="@color/transparent"
                        android:textOff="@string/nothing"
                        android:textOn="@string/nothing" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_due_date_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginBottom="17dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="2059년 12월 25일"
                    android:textColor="@color/main_orange"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/rl_vote_due_date"
                    app:layout_constraintTop_toBottomOf="@id/rl_vote_due_date"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_due_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginBottom="17dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="오후 4:00"
                    android:textColor="@color/main_orange"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_due_date_date"
                    app:layout_constraintTop_toBottomOf="@id/rl_vote_due_date"
                    tools:visibility="visible" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>