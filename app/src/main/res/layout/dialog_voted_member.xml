<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@color/transparent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_dialog_vote"
    android:layout_width="280dp"
    android:layout_height="344dp"
    android:layout_marginTop="43dp"
    android:background="@drawable/background_dialog"
    android:minHeight="344dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/iv_dialog_circle">

    <TextView
        android:id="@+id/tv_vote_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="김치삼겹살" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_vote_member"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_vote_item_name"
        app:layout_constraintBottom_toTopOf="@id/btn_vote_dialog_done"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_vote_dialog_done"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:background="@drawable/background_dialog_vote_confirm_orange"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/dialog_confirm"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

<ImageView
    android:id="@+id/iv_dialog_circle"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:src="@drawable/background_dialog_circle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ImageView
    android:id="@+id/iv_dialog_vote"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:src="@drawable/ic_eva_shopping_bag_outline"
    app:layout_constraintBottom_toBottomOf="@id/iv_dialog_circle"
    app:layout_constraintEnd_toEndOf="@id/iv_dialog_circle"
    app:layout_constraintStart_toStartOf="@id/iv_dialog_circle"
    app:layout_constraintTop_toTopOf="@id/iv_dialog_circle" />


</androidx.constraintlayout.widget.ConstraintLayout>