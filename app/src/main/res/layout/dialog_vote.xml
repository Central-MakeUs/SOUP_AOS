<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="300dp"
        android:background="@drawable/background_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_dialog_circle"
        android:layout_marginTop="43dp">

        <TextView
            android:id="@+id/tv_query1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="투표명"
            android:textColor="@color/main_orange"
            android:fontFamily="@font/roboto_bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_query2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2021.08.01"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_query1"/>

        <TextView
            android:id="@+id/tv_dialog_exp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_register_new_store_exp1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_query2"/>

        <TextView
            android:id="@+id/tv_dialog_exp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_register_new_store_exp2"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_exp1"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:text="@string/dialog_vote_confirm"
            android:textColor="@color/dialog_cancel_text"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/background_dialog_vote_confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_dialog_circle"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/background_dialog_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_dialog_vote"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_eva_shopping_bag_outline"
        app:layout_constraintTop_toTopOf="@id/iv_dialog_circle"
        app:layout_constraintBottom_toBottomOf="@id/iv_dialog_circle"
        app:layout_constraintStart_toStartOf="@id/iv_dialog_circle"
        app:layout_constraintEnd_toEndOf="@id/iv_dialog_circle"/>









</androidx.constraintlayout.widget.ConstraintLayout>