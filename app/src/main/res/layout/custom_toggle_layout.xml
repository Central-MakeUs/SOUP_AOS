<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_toggle"
    android:layout_width="match_parent"
    android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_toggle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/input_hint"
            android:textSize="13sp"
            tools:text="vote item title"/>

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_custom"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/selector_vote_toggle"
            android:textOn="@string/nothing"
            android:textOff="@string/nothing"
            android:button="@color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"/>

    <View
        android:id="@+id/view_custom_toggle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/next_btn"/>

</RelativeLayout>