<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_myreview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="115dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="31dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_dialog">

        <ImageView
            android:id="@+id/iv_myreview"
            android:layout_width="130dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:background="@drawable/background_existing_store_image"
            />

        <TextView
            android:id="@+id/tv_myreview_store_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="음식점 이름"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_myreview"
            app:layout_constraintTop_toTopOf="parent"/>
        
        <LinearLayout
            android:id="@+id/ll_myreview_store_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myreview_store_name"
            app:layout_constraintStart_toStartOf="@id/tv_myreview_store_name"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="@color/black"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/tv_myreview_store_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="음식점 위치"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular" />
            
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_myreview_menu_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/ll_myreview_store_location"
            app:layout_constraintStart_toStartOf="@id/tv_myreview_store_name"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="@color/black"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/tv_myreview_menu_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="메뉴"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/roboto_regular" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_myreview_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_myreview_createdAt"
            app:layout_constraintStart_toStartOf="@id/ll_myreview_menu_name"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/tv_myreview_createdAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="2021.05.31"
            android:textSize="10sp"
            android:textColor="@color/input_hint"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>