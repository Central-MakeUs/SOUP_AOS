<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.home.create_group.CreateGroupActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeus.eatoo.custom_view.CustomToolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            app:contentInsetStart="0dp"
            app:leftIcon="@drawable/ic_back_btn"
            app:titleText="@string/create_group_toolbar" />

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="잇퉁ㅇㅇㅇ"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_makegroup_mate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/create_group_suggest1"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/tv_username"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_makegroup_suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/create_group_suggest2"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_username"
                app:layout_constraintTop_toBottomOf="@id/tv_username" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_makegroup_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/create_group_name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_username"
                app:layout_constraintTop_toBottomOf="@id/tv_makegroup_suggest" />

            <EditText
                android:id="@+id/et_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittext_background_radius_litle"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/create_group_name_suggest"
                android:maxLength="10"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="text"
                android:paddingStart="6dp"
                android:paddingTop="13dp"
                android:paddingBottom="14dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_100"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_makegroup_group_name"
                app:layout_constraintTop_toBottomOf="@id/tv_makegroup_group_name"
                tools:ignore="Autofill,RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_makegroup_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/create_group_color"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_makegroup_group_name"
                app:layout_constraintTop_toBottomOf="@+id/et_group_name" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipgroup_makegroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/tv_makegroup_color"
                app:layout_constraintTop_toBottomOf="@id/tv_makegroup_color"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_1"
                    style="@style/CustomChipStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:checked="true"
                    android:tag="1"
                    app:checkedIconEnabled="false"
                    app:chipEndPadding="-10dp"
                    app:chipIcon="@drawable/color_chip1"
                    app:chipStartPadding="6dp"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_2"
                    style="@style/CustomChipStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tag="2"
                    app:checkedIconEnabled="false"
                    app:chipEndPadding="-10dp"
                    app:chipIcon="@drawable/color_chip2"
                    app:chipStartPadding="6dp"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_3"
                    style="@style/CustomChipStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tag="3"
                    app:checkedIconEnabled="false"
                    app:chipEndPadding="-10dp"
                    app:chipIcon="@drawable/color_chip3"
                    app:chipStartPadding="6dp"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_4"
                    style="@style/CustomChipStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tag="4"
                    app:checkedIconEnabled="false"
                    app:chipEndPadding="-10dp"
                    app:chipIcon="@drawable/color_chip4"
                    app:chipStartPadding="6dp"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_5"
                    style="@style/CustomChipStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tag="5"
                    app:checkedIconEnabled="false"
                    app:chipEndPadding="-10dp"
                    app:chipIcon="@drawable/color_chip5"
                    app:chipStartPadding="6dp"
                    app:closeIconEnabled="false" />


            </com.google.android.material.chip.ChipGroup>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_makegroup_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/create_group_keyword"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_makegroup_color"
                app:layout_constraintTop_toBottomOf="@id/chipgroup_makegroup" />



            <FrameLayout
                android:id="@+id/fl_creategroup_keyword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_makegroup_keyword"
                app:layout_constraintTop_toBottomOf="@id/tv_makegroup_keyword">


                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexbox_make_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:alignContent="stretch"
                    app:alignItems="stretch"
                    app:flexWrap="wrap">

                    <EditText
                        android:id="@+id/et_keyword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="top"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:inputType="text"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_flexGrow="1"/>

                </com.google.android.flexbox.FlexboxLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/keyword_plus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group_gray_plus"
                    app:layout_constraintTop_toTopOf="@id/fl_creategroup_keyword"
                    app:layout_constraintStart_toStartOf="@id/fl_creategroup_keyword"/>


            </FrameLayout>



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_makegroup_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/create_group_location"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_makegroup_keyword"
                app:layout_constraintTop_toBottomOf="@+id/fl_creategroup_keyword" />

            <LinearLayout
                android:id="@+id/location_search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittext_background_radius_litle"
                android:orientation="horizontal"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_makegroup_location">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:src="@drawable/ic_group_search_location" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_search_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/input_location"
                    android:textColor="@color/gray_200"
                    android:textSize="14sp" />


            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_creategroup"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/edittext_background_radius_litle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location_search_layout">

                <fragment
                    android:id="@+id/frag_create_group_map"
                    android:name="com.naver.maps.map.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp" />


                <LinearLayout
                    android:id="@+id/ll_container_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_background_radius_litle"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/ic_gps" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/set_current_location"
                        android:textColor="#a8a8a8"
                        android:textSize="13sp" />

                </LinearLayout>

            </FrameLayout>

            <com.naver.maps.map.widget.ZoomControlView
                android:id="@+id/zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="@id/fl_creategroup"
                app:layout_constraintStart_toStartOf="@id/fl_creategroup"
                android:layout_marginStart="25dp"
                app:layout_constraintBottom_toBottomOf="@id/fl_creategroup"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_change_location"
                android:layout_width="64dp"
                android:layout_height="29dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/background_change_location"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/create_group_change_location"
                android:textColor="@color/main_orange"
                app:layout_constraintBottom_toBottomOf="@id/fl_creategroup"
                app:layout_constraintEnd_toEndOf="@+id/fl_creategroup" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register_group_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/login_btn_background"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/create_group_register"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_creategroup"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="22dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>