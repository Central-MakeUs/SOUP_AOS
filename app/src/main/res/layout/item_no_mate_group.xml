<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="255dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_orange"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcoming"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="잇투"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toTopOf="@+id/tv_welcome"
        app:layout_constraintStart_toEndOf="@id/tv_welcome"/>

    <TextView
        android:id="@+id/tv_welcome_username_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_user_name_title"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toTopOf="@id/tv_welcome"
        app:layout_constraintStart_toEndOf="@id/tv_user_name"/>

    <TextView
        android:id="@+id/tv_no_mategroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_mate_group"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintStart_toStartOf="@id/tv_welcome"/>

    <TextView
        android:id="@+id/tv_press_plus_suggest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_plus_suggest1"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_no_mategroup"
        app:layout_constraintStart_toStartOf="@id/tv_welcome"/>

    <TextView
        android:id="@+id/tv_press_plus_suggest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_plus_suggest2"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_press_plus_suggest1"
        app:layout_constraintStart_toStartOf="@id/tv_welcome"/>

    <!--members-->

    <ImageView
        android:id="@+id/iv_member1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_press_plus_suggest2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/shape_blank_user"/>

    <ImageView
        android:id="@+id/iv_member2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_press_plus_suggest2"
        app:layout_constraintStart_toStartOf="@+id/iv_member1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/shape_blank_user"/>

    <ImageView
        android:id="@+id/iv_member3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_press_plus_suggest2"
        app:layout_constraintStart_toStartOf="@+id/iv_member2"
        android:layout_marginStart="20dp"
        android:src="@drawable/shape_blank_user"/>

    <ImageView
        android:id="@+id/iv_member4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_press_plus_suggest2"
        app:layout_constraintStart_toStartOf="@+id/iv_member3"
        android:layout_marginStart="20dp"
        android:src="@drawable/shape_blank_user"/>

    <ImageView
        android:id="@+id/iv_add_group"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_member1"
        android:src="@drawable/ic_baseline_add_white_circle_24"/>






</androidx.constraintlayout.widget.ConstraintLayout>