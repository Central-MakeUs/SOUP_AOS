<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.review.create_review.create_review2.CreateReview2Activity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.eatoo.custom_view.CustomToolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="19dp"
            app:contentInsetStart="0dp"
            app:leftIcon="@drawable/ic_back_btn"
            app:titleText="@string/create_review" />

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/two_over_two"
                android:textColor="@color/input_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_review2_menu_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_review2_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/menu_name"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/rl_menu_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittext_background_radius_litle"
                android:orientation="horizontal"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/tv_review2_menu_name">

                <EditText
                    android:id="@+id/et_menu_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toStartOf="@+id/iv_menu_name_delete"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="@string/input_menu_name"
                    android:inputType="text"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_menu_name_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_group_137"
                    android:visibility="invisible"
                    tools:visibility="visible" />

            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_one_sentence_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/one_sentence_review"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/rl_menu_name" />

            <RelativeLayout
                android:id="@+id/rl_review"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittext_background_radius_litle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/tv_one_sentence_review">

                <EditText
                    android:id="@+id/et_short_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="top"
                    android:hint="@string/input_review"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:inputType="text|textMultiLine"
                    android:maxLength="30"
                    android:maxLines="3"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent" />

            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_review_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/review_img"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/rl_review" />

            <RelativeLayout
                android:id="@+id/rl_review_img"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittext_background_radius_litle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/tv_review_img">

                <ImageView
                    android:id="@+id/iv_review_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    tools:visibility="visible" />


                <ImageView
                    android:id="@+id/iv_review_img_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_eva_image_outline" />

                <TextView
                    android:id="@+id/tv_input_review_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_review_img_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/input_review_img"
                    android:textColor="@color/input_hint"
                    android:textSize="15sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/rating"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/rl_review_img" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/tv_rating"
                app:singleSelection="false">


                <androidx.appcompat.widget.AppCompatToggleButton
                    android:id="@+id/btn_star1"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/selector_rating_star"
                    android:button="@color/transparent"
                    android:textOff="@string/nothing"
                    android:textOn="@string/nothing"
                    app:layout_constraintEnd_toStartOf="@id/btn_star2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatToggleButton
                    android:id="@+id/btn_star2"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/selector_rating_star"
                    android:button="@color/transparent"
                    android:textOff="@string/nothing"
                    android:textOn="@string/nothing"
                    app:layout_constraintEnd_toStartOf="@id/btn_star3"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatToggleButton
                    android:id="@+id/btn_star3"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/selector_rating_star"
                    android:button="@color/transparent"
                    android:textOff="@string/nothing"
                    android:textOn="@string/nothing"
                    app:layout_constraintEnd_toStartOf="@+id/btn_star4"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatToggleButton
                    android:id="@+id/btn_star4"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/selector_rating_star"
                    android:button="@color/transparent"
                    android:textOff="@string/nothing"
                    android:textOn="@string/nothing"
                    app:layout_constraintEnd_toStartOf="@+id/btn_star5"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatToggleButton
                    android:id="@+id/btn_star5"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:background="@drawable/selector_rating_star"
                    android:button="@color/transparent"
                    android:textOff="@string/nothing"
                    android:textOn="@string/nothing"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_review_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/create_group_keyword"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/cl_rating" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/optional"
                android:textColor="@color/input_hint"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_review_keyword"
                app:layout_constraintStart_toEndOf="@id/tv_review_keyword"
                app:layout_constraintTop_toTopOf="@id/tv_review_keyword" />


            <FrameLayout
                android:id="@+id/fl_create_review_keyword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_review_keyword"
                app:layout_constraintTop_toBottomOf="@id/tv_review_keyword">


                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexbox_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:alignContent="stretch"
                    app:alignItems="stretch"
                    app:flexWrap="wrap">

                    <EditText
                        android:id="@+id/et_keyword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="top"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:inputType="text"
                        android:nextFocusDown="@id/et_keyword"
                        android:textCursorDrawable="@drawable/color_cursor"
                        app:layout_flexGrow="1"/>

                </com.google.android.flexbox.FlexboxLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/fl_create_review_keyword"
                    app:layout_constraintStart_toStartOf="@id/fl_create_review_keyword"
                    android:src="@drawable/ic_group_gray_plus" />

            </FrameLayout>


            <TextView
                android:id="@+id/tv_review_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/store_link"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/fl_create_review_keyword" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/optional"
                android:textColor="@color/input_hint"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_review_link"
                app:layout_constraintStart_toEndOf="@id/tv_review_link"
                app:layout_constraintTop_toTopOf="@id/tv_review_link" />

            <RelativeLayout
                android:id="@+id/rl_review_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittext_background_radius_litle"
                android:orientation="horizontal"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/tv_review_link">

                <EditText
                    android:id="@+id/et_review_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/input_store_link"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_register_review"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_btn_background"
                android:fontFamily="@font/roboto_regular"
                android:stateListAnimator="@null"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_review2_menu_name"
                app:layout_constraintTop_toBottomOf="@id/rl_review_link" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>