<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.review.my_review.MyReviewActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_myreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeus.eatoo.custom_view.CustomToolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            app:contentInsetStart="0dp"
            app:leftIcon="@drawable/ic_back_btn"
            app:titleText="@string/my_review"
            />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/tv_my_review_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="잇투"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/cardview_myreview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"/>

    <TextView
        android:id="@+id/tv_my_review_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_review_user_title"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tv_my_review_user_name"
       app:layout_constraintTop_toTopOf="@id/tv_my_review_user_name"/>


    <TextView
        android:id="@+id/tv_is_my_review"
        android:layout_width="96dp"
        android:layout_height="35dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/is_review"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/tv_my_review_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_review_user_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_myreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tv_is_my_review"
        app:layout_constraintBottom_toTopOf="@id/cardview_review_suggest"/>


    <ImageView
        android:id="@+id/iv_no_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_239"
        tools:visibility="visible"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_myreview"
        app:layout_constraintBottom_toTopOf="@id/cardview_review_suggest"/>


    <TextView
        android:id="@+id/tv_no_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:visibility="invisible"
        android:text="@string/no_review"
        android:textSize="10sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/input_hint"
        app:layout_constraintTop_toBottomOf="@+id/iv_no_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_myreview"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="23dp"
        android:src="@drawable/ic_baseline_add_24"
        app:tint="@color/white"
        app:backgroundTint="@color/main_orange"
        app:layout_constraintBottom_toTopOf="@+id/cardview_review_suggest"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="fab_review" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/background_shadow"
        app:layout_constraintBottom_toTopOf="@id/cardview_review_suggest"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_review_suggest"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_write_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:lineSpacingExtra="8sp"
            android:text="@string/try_write_review"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_write_review_exp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/try_write_review_exp1"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_write_review"
            app:layout_constraintTop_toBottomOf="@+id/tv_write_review" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_review_char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_group_271"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>