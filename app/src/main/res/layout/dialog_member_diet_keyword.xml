<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog_confirm_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_dialog_container"
        android:layout_width="280dp"
        android:layout_height="344dp"
        android:background="@drawable/background_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_dialog_circle"
        android:layout_marginTop="43dp">

        <LinearLayout
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="배불뚝이"
                android:fontFamily="@font/roboto_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/taste_keyword"
                android:background="@drawable/background_keyword_like"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/main_orange"
                android:gravity="center"
                android:paddingVertical="4dp"
                android:paddingHorizontal="6dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>






        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:background="@drawable/background_dialog_vote_confirm_orange"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/dialog_confirm"
            android:visibility="visible"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_dialog_circle"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/background_dialog_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_member_container"
        android:layout_width="59dp"
        android:layout_height="59dp"
        app:layout_constraintTop_toTopOf="@id/iv_dialog_circle"
        app:layout_constraintBottom_toBottomOf="@id/iv_dialog_circle"
        app:layout_constraintStart_toStartOf="@id/iv_dialog_circle"
        app:layout_constraintEnd_toEndOf="@id/iv_dialog_circle" />


    <ImageView
        android:id="@+id/iv_member"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/iv_member_container"
        app:layout_constraintBottom_toBottomOf="@id/iv_member_container"
        app:layout_constraintStart_toStartOf="@id/iv_member_container"
        app:layout_constraintEnd_toEndOf="@id/iv_member_container"/>



</androidx.constraintlayout.widget.ConstraintLayout>