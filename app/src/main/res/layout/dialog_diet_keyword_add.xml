<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog_confirm_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="257dp"
        android:background="@drawable/background_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_dialog_circle"
        android:layout_marginTop="43dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_query1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/input_diet_keyword2"
            android:fontFamily="@font/roboto_bold"
            android:textSize="14sp"
            android:textColor="@color/main_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute" />

        <RadioGroup
            android:id="@+id/radiogroup_diet_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_query1"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rd_btn_like"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:background="@drawable/selector_diet_keyword"
                android:button="@android:color/transparent"
                android:text="@string/diet_keyword_like"
                android:checked="true"
                android:textColor="@color/rd_btn_text_color"
                android:textSize="10sp"
                android:layout_marginEnd="4.5dp"
                android:gravity="center"
                android:tag="1"/>

            <RadioButton
                android:id="@+id/rd_btn_dislike"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:background="@drawable/selector_diet_keyword"
                android:button="@android:color/transparent"
                android:text="@string/diet_keyword_dislike"
                android:textColor="@color/rd_btn_text_color"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginStart="4.5dp"
                android:tag="2"
               />

        </RadioGroup>

        <EditText
            android:id="@+id/et_diet_keyword_input"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            app:layout_constraintTop_toBottomOf="@id/radiogroup_diet_keyword"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/edittext_background_radius_litle"
            android:hint="@string/input_keyword_et"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_medium"
            android:textColorHint="@color/dialog_cancel_text"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="10"
            android:gravity="center"/>

        <SeekBar
            android:id="@+id/seekbar_diet_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_diet_keyword_input"
            android:layout_marginTop="28dp"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:max="5"
            android:progress="1"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:background="@drawable/background_dialog_vote_confirm_orange"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/dialog_confirm"
            android:visibility="visible"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_dialog_circle"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/background_dialog_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_dialog_circle_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_eva_plus_circle_outline"
        app:layout_constraintTop_toTopOf="@id/iv_dialog_circle"
        app:layout_constraintBottom_toBottomOf="@id/iv_dialog_circle"
        app:layout_constraintStart_toStartOf="@id/iv_dialog_circle"
        app:layout_constraintEnd_toEndOf="@id/iv_dialog_circle"/>



</androidx.constraintlayout.widget.ConstraintLayout>