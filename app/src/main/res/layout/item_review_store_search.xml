<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_review_search_store_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_review_search_store_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="20dp"
        tools:text = "가게 이름"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"/>


    <TextView
        android:id="@+id/tv_review_search_store_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_review_search_store_name"
        app:layout_constraintStart_toStartOf="@id/tv_review_search_store_name"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        tools:text="가게 주소"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <LinearLayout
        android:id="@+id/ll_review_search_store_road_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_review_search_store_location"
        app:layout_constraintStart_toStartOf="@id/tv_review_search_store_location"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/road_address"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium" />

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:background="@color/black"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/tv_myreview_store_road_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="음식점 위치"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/input_hint"
        app:layout_constraintTop_toBottomOf="@id/ll_review_search_store_road_address"
        android:layout_marginTop="22.5dp"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>