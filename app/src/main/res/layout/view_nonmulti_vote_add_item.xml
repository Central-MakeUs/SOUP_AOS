<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_dynamic_vote_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <EditText
        android:id="@+id/et_vote_dialog_item"
        android:layout_width="199dp"
        android:layout_height="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:maxLength="15"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginBottom="6dp"
        android:background="@drawable/background_vote_dialog_item"
        android:paddingStart="9dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:hint="@string/enter_new_item"
        tools:ignore="Autofill,RtlSymmetry" />

    <TextView
        android:id="@+id/tv_vote_dialog_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_vote_num"
        android:textSize="10sp"
        android:textColor="@color/dialog_cancel_text"
        app:layout_constraintEnd_toEndOf="@id/et_vote_dialog_item"
        app:layout_constraintTop_toTopOf="@id/et_vote_dialog_item"
        app:layout_constraintBottom_toBottomOf="@id/et_vote_dialog_item"
        android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>