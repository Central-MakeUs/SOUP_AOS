<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog_confirm_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:background="@drawable/background_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_dialog_circle"
        android:layout_marginTop="43dp">


        <TimePicker
            android:id="@+id/start_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="45dp"
            android:timePickerMode="spinner"
            app:layout_constraintBottom_toTopOf="@+id/check_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/check_btn"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/background_dialog_confirm"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/dialog_confirm"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_dialog_circle"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/background_dialog_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_dialog_circle_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/eva_clock_outline"
        app:layout_constraintTop_toTopOf="@id/iv_dialog_circle"
        app:layout_constraintBottom_toBottomOf="@id/iv_dialog_circle"
        app:layout_constraintStart_toStartOf="@id/iv_dialog_circle"
        app:layout_constraintEnd_toEndOf="@id/iv_dialog_circle"/>



</androidx.constraintlayout.widget.ConstraintLayout>