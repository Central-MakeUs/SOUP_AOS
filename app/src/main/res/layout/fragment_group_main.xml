<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="13sp"
                android:text="@string/group_finding_mate"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/appCompatImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:background="@color/white"
                android:src="@drawable/ic_right_btn"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/appCompatTextView12" />


            <LinearLayout
                android:id="@+id/finding_mate_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView12">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/finding_mate_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginEnd="20dp"
                    android:descendantFocusability="blocksDescendants"
                    android:overScrollMode="never"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    tools:ignore="RtlHardcoded" />

                <HorizontalScrollView
                    android:id="@+id/finding_mate_no_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintLayout2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/background_dialog"
                                android:clickable="false"
                                android:elevation="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/mate_suggestion_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="52dp"
                                    android:layout_marginTop="17dp"
                                    android:layout_marginEnd="52dp"
                                    android:src="@drawable/group_278"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/mate_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="27dp"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginEnd="27dp"
                                    android:layout_marginBottom="31dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:lineSpacingExtra="7sp"
                                    android:text="@string/group_main_no_mate_matching_txt"
                                    android:textColor="@color/gray_100"
                                    android:textSize="13sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@+id/mate_suggestion_img"
                                    app:layout_constraintStart_toStartOf="@+id/mate_suggestion_img"
                                    app:layout_constraintTop_toBottomOf="@+id/mate_suggestion_img" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="37dp"
                                    android:layout_marginBottom="12dp"
                                    android:orientation="horizontal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@+id/mate_title"
                                    app:layout_constraintStart_toStartOf="@+id/mate_title"
                                    app:layout_constraintTop_toBottomOf="@+id/mate_title" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/matching_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="11dp"
                                android:background="@drawable/mathing_status_background"
                                android:elevation="5dp"
                                android:fontFamily="sans-serif"
                                android:padding="1.5dp"
                                android:paddingStart="11dp"
                                android:paddingEnd="11dp"
                                android:text="@string/group_main_no_mate_matching"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
                                app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
                                app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
                                tools:ignore="SmallSp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintLayout3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/background_dialog"
                                android:elevation="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.47">


                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/mate_plus_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="52dp"
                                    android:layout_marginTop="17dp"
                                    android:layout_marginEnd="52dp"
                                    android:background="@color/transparent"
                                    android:src="@drawable/group_175"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/mate_title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="27dp"

                                    android:layout_marginTop="13dp"
                                    android:layout_marginEnd="27dp"
                                    android:layout_marginBottom="31dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:lineSpacingExtra="7sp"
                                    android:text="@string/group_main_no_mate_matching_txt2"
                                    android:textColor="@color/main_color"
                                    android:textSize="13sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@+id/mate_plus_btn"
                                    app:layout_constraintStart_toStartOf="@+id/mate_plus_btn"
                                    app:layout_constraintTop_toBottomOf="@+id/mate_plus_btn" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="37dp"
                                    android:layout_marginBottom="12dp"
                                    android:orientation="horizontal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@+id/mate_title1"
                                    app:layout_constraintStart_toStartOf="@+id/mate_title1"
                                    app:layout_constraintTop_toBottomOf="@+id/mate_title1" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/matching_status1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="11dp"
                                android:background="@drawable/mathing_status_background"
                                android:elevation="5dp"
                                android:fontFamily="sans-serif"
                                android:padding="1.5dp"
                                android:paddingStart="11dp"
                                android:paddingEnd="11dp"
                                android:text="@string/group_main_no_mate_matching"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
                                app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
                                app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
                                tools:ignore="SmallSp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>


                </HorizontalScrollView>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="25sp"
                android:text="@string/group_member_review"
                android:textColor="@color/main_color"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/finding_mate_layout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="13sp"
                android:text="@string/group_recommend_restaurant"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="23dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="12sp"
                android:text="@string/group_view_more"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/appCompatTextView13" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView13">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/group_store_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingEnd="5dp"
                    android:scrollbars="none"
                    tools:ignore="RtlSymmetry" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/none_group_store_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_dialog"
                    android:elevation="5dp">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="37dp"
                        android:src="@drawable/group_278"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="@+id/appCompatImageView13"
                        app:layout_constraintStart_toStartOf="@+id/appCompatImageView13"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView13">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/group_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:lineSpacingExtra="7sp"
                            android:text="@string/group_main_no_store_group_name_ex"
                            android:textColor="#a8a8a8"
                            android:textSize="13sp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="7sp"
                            android:text="@string/group_main_no_store_txt"
                            android:textColor="@color/gray_100"
                            android:textSize="13sp"
                            android:textStyle="normal" />


                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/group_main_no_store_txt2"
                        android:textColor="@color/gray_100"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="38dp"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/group_main_no_store_txt3"
                        android:textColor="@color/main_color"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView2"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView2"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_review_suggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_write_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_bold"
                        android:lineHeight="25sp"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/group_main_review1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UnusedAttribute" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_write_review_exp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:lineHeight="18sp"
                        android:lineSpacingExtra="11sp"
                        android:text="@string/group_main_review2"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_write_review"
                        app:layout_constraintTop_toBottomOf="@+id/tv_write_review"
                        tools:ignore="UnusedAttribute" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_write_review_exp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="18dp"
                        android:fontFamily="@font/roboto_regular"
                        android:lineHeight="10sp"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/group_main_review3"
                        android:textColor="@color/main_color"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tv_write_review_exp1"
                        app:layout_constraintTop_toBottomOf="@+id/tv_write_review_exp1"
                        tools:ignore="SmallSp,UnusedAttribute" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_review_char"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_group_271"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>