<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="13sp"
                android:text="@string/group_finding_mate"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/appCompatImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:background="@color/white"
                android:src="@drawable/ic_right_btn"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/appCompatTextView12" />

            <LinearLayout
                android:id="@+id/finding_mate_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="11dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView12">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/finding_mate_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:overScrollMode="never" />

                <HorizontalScrollView
                    android:id="@+id/finding_mate_no_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintLayout2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:background="@drawable/background_dialog"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/mate_suggestion_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="52dp"
                                    android:layout_marginTop="17dp"
                                    android:layout_marginEnd="52dp"
                                    android:src="@drawable/group_278"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/mate_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="27dp"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginEnd="27dp"
                                    android:layout_marginBottom="31dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:lineSpacingExtra="7sp"
                                    android:text="@string/group_main_no_mate_matching_txt"
                                    android:textColor="@color/gray_100"
                                    android:textSize="13sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@+id/mate_suggestion_img"
                                    app:layout_constraintStart_toStartOf="@+id/mate_suggestion_img"
                                    app:layout_constraintTop_toBottomOf="@+id/mate_suggestion_img" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="37dp"
                                    android:layout_marginBottom="12dp"
                                    android:orientation="horizontal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@+id/mate_title"
                                    app:layout_constraintStart_toStartOf="@+id/mate_title"
                                    app:layout_constraintTop_toBottomOf="@+id/mate_title" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/matching_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="11dp"
                                android:background="@drawable/mathing_status_background"
                                android:fontFamily="sans-serif"
                                android:padding="1.5dp"
                                android:paddingStart="11dp"
                                android:paddingEnd="11dp"
                                android:text="@string/group_main_no_mate_matching"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
                                app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
                                app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
                                tools:ignore="SmallSp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintLayout3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_dialog"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/mate_plus_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="52dp"
                                    android:layout_marginTop="17dp"
                                    android:layout_marginEnd="52dp"
                                    android:background="@color/transparent"
                                    android:src="@drawable/group_175"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/mate_title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="27dp"

                                    android:layout_marginTop="13dp"
                                    android:layout_marginEnd="27dp"
                                    android:layout_marginBottom="31dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:lineSpacingExtra="7sp"
                                    android:text="@string/group_main_no_mate_matching_txt2"
                                    android:textColor="@color/main_color"
                                    android:textSize="13sp"
                                    android:textStyle="normal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@+id/mate_plus_btn"
                                    app:layout_constraintStart_toStartOf="@+id/mate_plus_btn"
                                    app:layout_constraintTop_toBottomOf="@+id/mate_plus_btn" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="37dp"
                                    android:layout_marginBottom="12dp"
                                    android:orientation="horizontal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@+id/mate_title1"
                                    app:layout_constraintStart_toStartOf="@+id/mate_title1"
                                    app:layout_constraintTop_toBottomOf="@+id/mate_title1" />


                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/matching_status1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="11dp"
                                android:background="@drawable/mathing_status_background"
                                android:fontFamily="sans-serif"
                                android:padding="1.5dp"
                                android:paddingStart="11dp"
                                android:paddingEnd="11dp"
                                android:text="@string/group_main_no_mate_matching"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
                                app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
                                app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
                                tools:ignore="SmallSp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>


                </HorizontalScrollView>


            </LinearLayout>



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="25sp"
                android:text="@string/group_member_review"
                android:textColor="@color/main_color"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/finding_mate_layout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="13sp"
                android:text="@string/group_recommend_restaurant"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="23dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="12sp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="normal"
                android:text="@string/group_view_more"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/appCompatTextView13" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView13">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/has_group_store_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/store_list1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/group_main_home_store_layout_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/store_img"
                            android:layout_width="153dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/group_main_home_store_img_background"
                            android:src="@drawable/ic_recommand_store_no_img"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/vector"
                            app:layout_constraintBottom_toBottomOf="@+id/store_img"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/store_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="@string/group_main_store_name"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/store_img" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/store_location_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="@string/group_main_store_location"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/store_name_tv"
                            app:layout_constraintTop_toBottomOf="@+id/store_name_tv"
                            tools:ignore="SmallSp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_star_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/star_20"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/store_location_tv"
                            app:layout_constraintTop_toBottomOf="@+id/store_location_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/store_score_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="@string/group_main_store_score"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/ic_star_img"
                            app:layout_constraintStart_toEndOf="@+id/ic_star_img"
                            app:layout_constraintTop_toTopOf="@+id/ic_star_img" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/store_list2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:background="@drawable/group_main_home_store_layout_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/store_list1"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/store_img2"
                            android:layout_width="153dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/group_main_home_store_img_background"
                            android:src="@drawable/ic_recommand_store_no_img"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/eva_heart_outline"
                            app:layout_constraintBottom_toBottomOf="@+id/store_img2"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/store_name_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="@string/group_main_store_name"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/store_img2" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/store_location_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="@string/group_main_store_location"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/store_name_tv2"
                            app:layout_constraintTop_toBottomOf="@+id/store_name_tv2"
                            tools:ignore="SmallSp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_star_img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/star_20"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/store_location_tv2"
                            app:layout_constraintTop_toBottomOf="@+id/store_location_tv2" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/store_score_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2sp"
                            android:text="@string/group_main_store_score"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/ic_star_img2"
                            app:layout_constraintStart_toEndOf="@+id/ic_star_img2"
                            app:layout_constraintTop_toTopOf="@+id/ic_star_img2" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/none_group_store_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_dialog">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="37dp"
                        android:src="@drawable/group_278"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="@+id/appCompatImageView13"
                        app:layout_constraintStart_toStartOf="@+id/appCompatImageView13"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView13">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:lineSpacingExtra="7sp"
                            android:text="@string/group_main_no_store_group_name_ex"
                            android:textColor="#a8a8a8"
                            android:textSize="13sp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="7sp"
                            android:text="@string/group_main_no_store_txt"
                            android:textColor="@color/gray_100"
                            android:textSize="13sp"
                            android:textStyle="normal" />


                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/group_main_no_store_txt2"
                        android:textColor="@color/gray_100"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="38dp"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/group_main_no_store_txt3"
                        android:textColor="@color/main_color"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView2"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView2"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_write_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/group_main_review1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_write_review_exp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/group_main_review2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
