<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.home.HomeFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatTextView"
        android:layout_width="61dp"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_eatoo_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:background="@color/gray_101"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"
        tools:ignore="PxUsage" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/uset_name_home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="10sp"
                android:text="@string/user_groups"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_main_user_icon_backround"
                app:layout_constraintBottom_toBottomOf="@+id/uset_name_home_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/uset_name_home_tv"
                app:layout_constraintVertical_bias="0.48" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_user_icon"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView6"
                app:layout_constraintEnd_toEndOf="@+id/appCompatImageView6"
                app:layout_constraintStart_toStartOf="@+id/appCompatImageView6"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView6" />


            <LinearLayout
                android:id="@+id/group_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uset_name_home_tv">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/group_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />

                <HorizontalScrollView
                    android:id="@+id/none_group_layout_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/none_group_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="255dp"
                            android:background="@drawable/main_home_background_radius"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="29dp"
                                android:fontFamily="sans-serif-black"
                                android:lineSpacingExtra="10sp"
                                android:text="@string/user_groups_create"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textStyle="normal" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="17dp"
                                android:fontFamily="sans-serif-medium"
                                android:lineSpacingExtra="7sp"
                                android:text="@string/user_groups_create2"
                                android:textColor="#ffffff"
                                android:textSize="13sp"
                                android:textStyle="normal" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="36dp"
                                android:layout_marginEnd="21dp"
                                android:layout_marginBottom="25dp">


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/appCompatImageView12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="26dp"
                                    android:src="@drawable/ic_group_user_white"
                                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView11"
                                    app:layout_constraintStart_toStartOf="@+id/appCompatImageView11"
                                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView11"
                                    app:layout_constraintVertical_bias="0.0" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/appCompatImageView11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="26dp"
                                    android:src="@drawable/ic_group_user_white"
                                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView10"
                                    app:layout_constraintStart_toStartOf="@+id/appCompatImageView10"
                                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView10" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/appCompatImageView10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="26dp"
                                    android:src="@drawable/ic_group_user_white"
                                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView9"
                                    app:layout_constraintStart_toStartOf="@+id/appCompatImageView9"
                                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView9" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/appCompatImageView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_group_user_white"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/group_plus_btn1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="65dp"
                                    android:foregroundGravity="center"
                                    android:src="@drawable/ic_plus"
                                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView9"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toEndOf="@+id/appCompatImageView12"
                                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView9" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="255dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/main_home_group_backgroud"
                            app:layout_constraintBottom_toBottomOf="@+id/none_group_layout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/none_group_layout"
                            app:layout_constraintTop_toTopOf="@+id/none_group_layout">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/group_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="29dp"
                                android:layout_marginTop="29dp"
                                android:fontFamily="sans-serif-black"
                                android:lineSpacingExtra="10sp"
                                android:text="@string/make_group_suggest1"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/group_name_tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:lineSpacingExtra="10sp"
                                android:text="@string/make_group_suggest2"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                app:layout_constraintStart_toStartOf="@+id/group_name_tv"
                                app:layout_constraintTop_toBottomOf="@+id/group_name_tv" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/group_name_tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:lineSpacingExtra="10sp"
                                android:text="@string/make_group_suggest3"
                                android:textColor="@color/main_color"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                app:layout_constraintStart_toEndOf="@+id/group_name_tv2"
                                app:layout_constraintTop_toBottomOf="@+id/group_name_tv" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/group_name_tv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="27dp"
                                android:fontFamily="sans-serif-black"
                                android:lineSpacingExtra="10sp"
                                android:text="@string/make_group_suggest4"
                                android:textColor="@color/main_color"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/group_name_tv3"
                                app:layout_constraintTop_toBottomOf="@+id/group_name_tv" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/appCompatTextView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:layout_marginTop="17dp"
                                android:fontFamily="sans-serif-medium"
                                android:lineSpacingExtra="7sp"
                                android:text="@string/main_group_none_group_txt2"
                                android:textColor="@color/main_color"
                                android:textSize="13sp"
                                android:textStyle="normal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/group_name_tv2" />


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/appCompatImageView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="23dp"
                                android:src="@drawable/ic_main_group_icon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView16" />


                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/group_plus_btn2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="56dp"
                                android:layout_marginEnd="27dp"
                                android:background="@color/white"
                                android:src="@drawable/ic_plus_main_color"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView16" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </HorizontalScrollView>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="17sp"
                android:text="@string/main_today"
                android:textColor="#ff4e16"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/group_layout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="13sp"
                android:text="@string/main_my_suggestion_mate"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@+id/appCompatTextView10"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView10" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mate_overview_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_right_btn"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/appCompatTextView11" />

            <LinearLayout
                android:id="@+id/mate_plus_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView11">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mate_none_plus_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_box_main_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView11">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mate_plus_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_plus_main_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/main_my_suggestion_mate_together"
                        android:textColor="#ff4e16"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mate_plus_btn" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_mate_recylerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardview_review_suggest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="4dp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_write_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="sans-serif-black"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/main_review_food1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_write_review_exp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/main_review_food2"
                        app:layout_constraintStart_toStartOf="@+id/tv_write_review"
                        app:layout_constraintTop_toBottomOf="@+id/tv_write_review" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_review_char"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_review_create"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_write_review"
                        tools:ignore="UnknownIdInLayout" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


