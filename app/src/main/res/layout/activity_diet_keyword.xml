<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_parent"
    tools:context=".src.mypage.keyword.DietKeywordActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeus.eatoo.custom_view.CustomToolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            app:contentInsetStart="0dp"
            app:leftIcon="@drawable/ic_back_btn"
            app:titleText="@string/diet_keyword" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardview_toolbar">


    <TextView
        android:id="@+id/tv_username_diet_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_diet_keyword1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_black"
        android:textSize="17sp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tv_input_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_diet_keyword2"
        app:layout_constraintTop_toBottomOf="@id/tv_username_diet_keyword"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_black"
        android:textSize="17sp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/tv_input_keyword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_diet_keyword3"
        app:layout_constraintTop_toBottomOf="@id/tv_input_keyword"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/main_orange"
        android:fontFamily="@font/roboto_medium"
        android:textSize="12sp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="18dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_keyword_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_349"
        app:layout_constraintTop_toBottomOf="@id/cl_tv_container"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

<LinearLayout
    android:id="@+id/ll_register_btn_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_keyword_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/login_btn_background"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/create_group_register"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="40dp"/>

</LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>