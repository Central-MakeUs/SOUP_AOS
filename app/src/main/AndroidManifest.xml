<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eatoo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".config.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".src.home.group.GroupActivity"></activity>
        <activity android:name=".src.home.create_group.group_location.GroupLocationActivity"></activity>
        <activity android:name=".src.signinlogin.signin.SignInActivity3" />
        <activity android:name=".src.signinlogin.signin.SignInActivity2" />
        <activity android:name=".src.explanation.ExplanationActivity" />
        <activity android:name=".src.splash.SplashActivity">

        </activity>
        <activity android:name=".src.home.create_group.CreateGroupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".src.signinlogin.signin.SignInActivity" />
        <activity android:name=".src.signinlogin.login.LoginActivity" />
        <activity android:name=".src.main.MainActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map" />
    </application>

</manifest>